extends ../layout

block content 
    link(rel="stylesheet", href="./css/list.css")
    script(src="/js/list.js")
    table.book.list
        thead 
            tr 
                th No.
                th ISBN
                th 도서명
                th 저자
                th 출판사
                th 가격
                th 할인가
        tbody 
            each item,index in bkList 
                tr
                    td #{index+1}
                    td= item.bk_isbn
                    td= item.bk_title
                    td= item.bk_author
                    td= item.bk_publisher
                    td= item.bk_price
                    td= item.bk_discount
    div.book.btn_box 
        a(href="book/input") 도서등록